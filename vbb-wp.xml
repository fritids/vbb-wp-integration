<?xml version="1.0" encoding="ISO-8859-1"?>

<product productid="vbb-wp" active="1">
    <title>WTT VBB WP Integration</title>
    <description>vBulletin plugin that helps you sync thanks count with WP</description>
    <version>1.0</version>
    <url>http://www.webtretho.com</url>
    <dependencies>
        <dependency dependencytype="vbulletin" minversion="3.0.0" maxversion=""/>
    </dependencies>
    <codes>
        <code version="*">
            <installcode><![CDATA[
                    $package = DIR . '/vbb-wp/vbb-wp.php';

                    if (!file_exists($package)) {
                        print_dots_stop();
                        print_cp_message('Please upload the files that came with this product before installing or upgrading!');
                    } else {
                    }
            ]]></installcode>
            <uninstallcode><![CDATA[
                    ]]></uninstallcode>
        </code>
        <code version="1.0">
            <installcode><![CDATA[
            ]]></installcode>
            <uninstallcode><![CDATA[                
            ]]></uninstallcode>
        </code>
    </codes>
    <templates>        
    </templates>
    <stylevardfns/>
    <stylevars/>
    <plugins>
        <plugin active="1" executionorder="5">
            <title>WTT vBBWP post_thanks_main_add_thanks_end</title>
            <hookname>post_thanks_main_add_thanks_end</hookname>
            <phpcode>
                <![CDATA[
require_once(DIR . '/vbb-wp/vbb-wp.php');

wtt_vbb_wp_update_post_thanks_amount($postinfo['post_thanks_amount'] + 1, $postinfo['postid']);
]]>
            </phpcode>
        </plugin>
        <plugin active="1" executionorder="5">
            <title>WTT vBBWP post_thanks_main_remove_user_thanks_end</title>
            <hookname>post_thanks_main_remove_user_thanks_end</hookname>
            <phpcode>
                <![CDATA[
require_once(DIR . '/vbb-wp/vbb-wp.php');

wtt_vbb_wp_update_post_thanks_amount($postinfo['post_thanks_amount'] - 1, $postinfo['postid']);
]]>
            </phpcode>
        </plugin>
        <plugin active="1" executionorder="5">
            <title>WTT vBBWP newreply_post_complete</title>
            <hookname>newreply_post_complete</hookname>
            <phpcode>
                <![CDATA[
require_once(DIR . '/vbb-wp/vbb-wp.php');

wtt_vbb_wp_newreply_post_complete_hoook($threadinfo['replycount'] + 1, $threadinfo['threadid']);
]]>
            </phpcode>
        </plugin>
    </plugins>
    <phrases>
        <phrasetype name="vBulletin Settings" fieldname="vbsettings">
            <phrase name="settinggroup_wtt_vbbwp_paths" username="wtt" version="1.0">
                <![CDATA[WTT vBBWP Settings]]>
            </phrase>
            <phrase name="setting_wtt_vbbwp_wp_path_title" username="wtt" version="1.0">
                <![CDATA[WP Path]]>
            </phrase>
            <phrase name="setting_wtt_vbbwp_wp_path_desc" username="wtt" version="1.0">
                <![CDATA[Path to WP site]]>
            </phrase>
        </phrasetype>
    </phrases>
    <options>
        <!-- vBBWP PATH -->
        <settinggroup name="wtt_vbbwp_paths" displayorder="200">
            <setting varname="wtt_vbbwp_wp_path" displayorder="10">
                <datatype>free</datatype>
                <defaultvalue>/home/webtretho/public_html/home</defaultvalue>
            </setting>
        </settinggroup>
    </options>
    <helptopics/>
    <cronentries/>
    <faqentries/>
</product>
